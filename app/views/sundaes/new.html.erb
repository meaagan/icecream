<div class="container fluid">
    <h2>Build your own</h2>
    <%= simple_form_for [@sundae] do |f| %>
        <%= f.input :cone_id, collection: @cones, as: :select %>
        <%= f.input :ice_cream_flavour_id, collection: @flavours, as: :select %>
        <%= f.input :ice_cream_type_id, collection: @types, as: :select %>
        <%= f.input :topping_id, collection: @toppings, as: :select %>
        <%= f.submit "Get rate" %>
        <% if @sundae.errors %>
            <%= @sundae.errors.full_messages %>
        <% end %>
    <% end %>

    <%= turbo_stream_from "sundaes" %>
    <%= turbo_frame_tag "sundaes" do %>
        <%= render partial: "sundaes/sundae", collection: @sundaes %>
    <% end %>


</div>

